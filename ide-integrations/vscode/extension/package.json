{
  "name": "olympus-coder",
  "displayName": "Olympus Coder",
  "description": "AI-powered coding assistant using Olympus-Coder LLM",
  "version": "1.0.0",
  "publisher": "olympus-coder",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "coding-assistant",
    "llm",
    "ollama",
    "code-generation",
    "debugging"
  ],
  "activationEvents": [
    "onCommand:olympusCoder.generateCode",
    "onCommand:olympusCoder.debugCode",
    "onCommand:olympusCoder.explainCode",
    "onCommand:olympusCoder.refactorCode",
    "onCommand:olympusCoder.generateTests"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "olympusCoder.generateCode",
        "title": "Generate Code",
        "category": "Olympus"
      },
      {
        "command": "olympusCoder.debugCode",
        "title": "Debug Code",
        "category": "Olympus"
      },
      {
        "command": "olympusCoder.explainCode",
        "title": "Explain Code",
        "category": "Olympus"
      },
      {
        "command": "olympusCoder.refactorCode",
        "title": "Refactor Code",
        "category": "Olympus"
      },
      {
        "command": "olympusCoder.generateTests",
        "title": "Generate Tests",
        "category": "Olympus"
      },
      {
        "command": "olympusCoder.chatWithAI",
        "title": "Chat with AI",
        "category": "Olympus"
      }
    ],
    "keybindings": [
      {
        "command": "olympusCoder.generateCode",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g",
        "when": "editorTextFocus"
      },
      {
        "command": "olympusCoder.debugCode",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "olympusCoder.explainCode",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "when": "editorHasSelection"
      },
      {
        "command": "olympusCoder.refactorCode",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "editorHasSelection"
      },
      {
        "command": "olympusCoder.generateTests",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Olympus Coder",
      "properties": {
        "olympusCoder.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL"
        },
        "olympusCoder.modelName": {
          "type": "string",
          "default": "olympus-coder-v1:latest",
          "description": "Olympus Coder model name"
        },
        "olympusCoder.temperature": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "description": "Model temperature (0 = deterministic, 1 = creative)"
        },
        "olympusCoder.maxTokens": {
          "type": "number",
          "default": 2048,
          "minimum": 256,
          "maximum": 4096,
          "description": "Maximum tokens in response"
        },
        "olympusCoder.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Auto-save generated code"
        },
        "olympusCoder.showInlineCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Show inline code completion suggestions"
        },
        "olympusCoder.contextLines": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 200,
          "description": "Number of context lines to include"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "olympusCoder.explainCode",
          "when": "editorHasSelection",
          "group": "olympus@1"
        },
        {
          "command": "olympusCoder.refactorCode",
          "when": "editorHasSelection",
          "group": "olympus@2"
        },
        {
          "command": "olympusCoder.debugCode",
          "when": "editorTextFocus",
          "group": "olympus@3"
        }
      ],
      "commandPalette": [
        {
          "command": "olympusCoder.generateCode",
          "when": "editorIsOpen"
        },
        {
          "command": "olympusCoder.debugCode",
          "when": "editorIsOpen"
        },
        {
          "command": "olympusCoder.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "olympusCoder.refactorCode",
          "when": "editorHasSelection"
        },
        {
          "command": "olympusCoder.generateTests",
          "when": "editorIsOpen"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "olympusCoderChat",
          "name": "Olympus Coder Chat",
          "when": "olympusCoder.enabled"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}